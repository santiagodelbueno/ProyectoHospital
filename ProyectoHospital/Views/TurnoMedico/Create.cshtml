@model ProyectoHospital.Models.TurnoMedico

@{
    ViewData["Title"] = "Agregar turno a Médico";
}

<style>

    h1 {
        color: black;
        text-shadow: 1px 1px 1px white;
    }

    form {
        color: black;
        text-shadow: 1px 1px 1px white;
    }
</style>

<h1>Agregar turno al Médico</h1>


<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MedicoId" class="control-label"></label>
                <select asp-for="MedicoId" class="form-control" asp-items="ViewBag.MedicoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TurnoId" class="control-label"></label>
                <select asp-for="TurnoId" class="form-control" asp-items="ViewBag.TurnoId"></select>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Añadir" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="text-center">
    <a asp-action="Index" class="btn btn-primary">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
