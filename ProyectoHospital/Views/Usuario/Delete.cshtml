@model ProyectoHospital.Models.Usuario

@{
    ViewData["Title"] = "Borrar usuario";
}

<style>


    h1, h4 {
        color: black;
    }

    dl {
        background-color: white;
    }
</style>

<h1>Borrar Usuario</h1>


<div>

    <hr />
    <dl class="container w-50">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mail)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mail)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NroAfiliado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NroAfiliado)
        </dd>
    </dl>

    <form asp-action="Delete" class="text-center">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-primary">Volver</a>
    </form>
</div>
