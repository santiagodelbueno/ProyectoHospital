@model IEnumerable<ProyectoHospital.Models.Turno>

@{
    ViewData["Title"] = "Indice del turno";
}

<style>


    h1 {
        color: black;
        text-shadow: 1px 1px 1px white;
    }
</style>

<h1 class="mt-3">Turnos</h1>

<p class="boton-centrado">
    <a asp-action="Create" class="btn btn-primary">Crear nuevo Turno</a>
</p>
<table class="styled-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Borrar</a>
                </td>
            </tr>
        }
    </tbody>
</table>